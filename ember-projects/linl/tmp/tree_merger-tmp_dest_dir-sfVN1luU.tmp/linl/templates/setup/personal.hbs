<form>
  <fieldset>
    <div>
      <label>First Name</label>
      {{input value=fields.first_name}}
    </div>
    <div>
      <label>Last Name</label>
      {{input value=fields.last_name}}
    </div>
    <div>
      <label>Birthdate</label>
      {{view Ember.TextField type='date' value=fields.date}}
    </div>
    <div>
      <label>State</label>
      {{view Ember.Select content=states 
        optionValuePath="content.value" optionLabelPath="content.label" }}
    </div>
    <div>
      <label>Current Yearly Earnings</label>
      {{view Ember.TextField type='currency' value=fields.current_earnings_cents }}
    </div>
    <div>
      <label>Final Year Earnings</label>
      {{view Ember.TextField type='currency' value=fields.final_year_earnings_cents }}
    </div>
    <div>
      <label>SS Benefits?</label>
      {{input type='checkbox' name='fields.ss_currently_collecting'}}
    </div>
    <div>
      <label>Social Security Benefits per month</label>
      {{view Ember.TextField type='currency' value=fields.ss_currently_collecting }}
    </div>
    <div>
      <label>Married?</label>
      {{input type='checkbox' checked=changedManually}}
    </div>
  </fieldset>
  <fieldset>
    <div {{bind-attr class='partnerVisible::hidden'}}>
      <div>
        <label>Name</label>
        {{input value=fields.partner.name}}
      </div>
      <div>
        <label>Birthdate</label>
        {{view Ember.TextField type='date' value=fields.partner.date}}
      </div>
      <div>
        <label>State</label>
        {{view Ember.Select content=states 
          optionValuePath="content.value" optionLabelPath="content.label" }}
      </div>
      <div>
        <label>Current Yearly Earnings</label>
        {{view Ember.TextField type='currency' value=fields.partner.current_earnings_cents }}
      </div>
      <div>
        <label>Final Year Earnings</label>
        {{view Ember.TextField type='currency' value=fields.partner.final_year_earnings_cents }}
      </div>
      <div>
        <label>SS Benefits?</label>
        {{input type='checkbox' name='fields.partner.ss_currently_collecting'}}
      </div>
      <div>
        <label>Social Security Benefits per month</label>
        {{view Ember.TextField type='currency' value=fields.partner.ss_currently_collecting }}
      </div>
    </div>
    <a href="#" {{action "saveChanges"}} class="btn btn-success">Create</a>
  </fieldset>
</form>
